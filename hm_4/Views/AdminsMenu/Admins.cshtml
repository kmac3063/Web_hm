@model IEnumerable<hm_4.Models.Admin>
@{
    ViewData["Title"] = "Админы";
}
<h3>Админы:</h3>
<form asp-controller="AdminsMenu" asp-action="Admins">
    <p>
        <input type="text" name="SearchStr">
        <input type="submit" value="Поиск" />
    </p>
</form>
<p>
    <a asp-action="AddAdm">Добавить</a>
</p>
<table class="table-condensed" cellpadding="8">
    <tr>
        <td>Имя</td>
        <td>Фамилия</td>
    </tr>
    @foreach (var adm in Model)
    {
        <tr>
            <td>@adm.FirstName</td>
            <td>@adm.SecondName</td>
            <td><a href="~/AdminsMenu/InfoAdm/@adm.AdminId">Инфо</a></td>
            <td><a href="~/AdminsMenu/Edit/@adm.AdminId">Изменить</a></td>
            <td><a href="~/AdminsMenu/Delete/@adm.AdminId">Удалить</a></td>
        </tr>
    }
</table>